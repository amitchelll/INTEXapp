<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Participants Table Schema</title>
    <style>
      table {
        border-collapse: collapse;
        width: 50%;
        margin-top: 20px;
      }

      th,
      td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }

      th {
        background-color: #f2f2f2;
      }
    </style>
  </head>

  <body>
    <form action="/viewData" method="GET">
      <h2>Participants Table Columns</h2>

      <label for="locationSelect">Filter by Location:</label>
      <select id="locationSelect" name="location">
        <option value="">All Locations</option>
        <% if (locations && locations.length > 0) { %>
          <% locations.forEach(location => { %>
            <option value="<%= location %>"><%= location %></option>
          <% }); %>
        <% } else { %>
          <option value="" disabled>No locations available</option>
        <% } %>
      </select>
      <button type="submit">Apply Filter</button>
      

      <table>
        <thead>
          <tr>
            <th>Participant_ID</th>
            <th>Timestamp</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Relationship_status</th>
            <th>Occupation_status</th>
            <th>Organization_ID</th>
            <th>Location</th>
            <th>Social_media</th>
            <th>Avg_time_spent</th>
          </tr>
        </thead>
        <tbody style="font-family: Arial; font-size: 9pt;">
          <% for (let iCount = 0; iCount < myparticipants.length; iCount++) { %>
          <tr>
            <td><%= myparticipants[iCount].participant_id %></td>
            <td><%= myparticipants[iCount].timestamp %></td>
            <td><%= myparticipants[iCount].age %></td>
            <td><%= myparticipants[iCount].gender %></td>
            <td><%= myparticipants[iCount].relationship_status %></td>
            <td><%= myparticipants[iCount].occupation_status %></td>
            <td><%= myparticipants[iCount].organization_id %></td>
            <td><%= myparticipants[iCount].location %></td>
            <td><%= myparticipants[iCount].social_media %></td>
            <td><%= myparticipants[iCount].avg_time_spent %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </form>

    <!-- Script to handle filter submission -->
    <script>
      document.getElementById('locationSelect').addEventListener('change', function(event) {

        console.log('Selected Location:', this.value);
        // Submit the form when the location dropdown changes
        this.form.submit();
      });
    </script>

  </body>
</html>
